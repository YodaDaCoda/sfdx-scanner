{
	"name": "@salesforce/plugin-code-analyzer",
	"description": "Static code scanner that applies quality and security rules to Apex code, and provides feedback.",
	"version": "5.0.0-alpha",
	"author": "Salesforce Code Analyzer Team",
	"bugs": "https://github.com/forcedotcom/sfdx-scanner/issues",
	"dependencies": {
		"@babel/core": "^7.11.0",
		"@babel/eslint-parser": "^7",
		"@eslint/js": "8.57.0",
		"@oclif/core": "^3.3.2",
		"@salesforce/core": "^5",
		"@salesforce/sf-plugins-core": "^5.0.4",
		"@types/node": "^17",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^27.9.0",
		"ts-node": "^10",
		"tslib": "^2",
		"typescript": "~5.1.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@oclif/plugin-help": "^5",
		"@salesforce/ts-sinon": "^1.1.2",
		"@types/chai": "^4",
		"@types/eslint": "^8.56.5",
		"@types/mocha": "^9",
		"chai": "^4",
		"eslint-plugin-sf-plugin": "^1.17.4",
		"mocha": "^10",
		"mocha-junit-reporter": "^2.0.0",
		"nyc": "^15.0.0",
		"oclif": "^4.0.3",
		"sinon": "^17"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"/lib",
		"/messages",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json",
		"/oclif.lock"
	],
	"homepage": "https://developer.salesforce.com/docs/platform/salesforce-code-analyzer/overview",
	"keywords": [
		"sfdx-plugin",
		"sf-plugin"
	],
	"license": "MIT",
	"oclif": {
		"commands": "./lib/commands",
		"bin": "sf",
		"topics": {
			"code-analyzer": {
				"description": "TODO"
			}
		},
		"devPlugins": [
			"@oclif/plugin-help"
		],
		"additionalHelpFlags": [
			"-h"
		],
		"topicSeparator": " ",
		"flexibleTaxonomy": true
	},
	"nyc": {
		"branches": "75",
		"lines": "85",
		"functions": "85",
		"statements": "85"
	},
	"repository": "forcedotcom/sfdx-scanner",
	"scripts": {
		"prepack": "rm -rf lib && tsc -b && oclif manifest && oclif readme && oclif lock && npm shrinkwrap",
		"postpack": "rm -f oclif.manifest.json oclif.lock npm-shrinkwrap.json",
		"lint": "eslint ./src --ext .ts --max-warnings 0",
		"test": "tsc -b && nyc mocha --timeout 60000 \"./test/**/*.test.ts\"",
		"version": "oclif readme && git add README.md"
	}
}
